{
  "name": "react-next-boilerplate",
  "version": "1.2.0",
  "main": "index.js",
  "author": "Jorge Luis Calleja <jorgelca1205@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env node ./server/app.js src",
    "build": "next build",
    "start:pm2": "pm2 start --name=gbruv-frontend-nextjs npm -- start",
    "start": "cross-env NODE_ENV=production node ./server/app.js",
    "test:unit": "cross-env NODE_ENV=test jest --coverage",
    "test": "npm run test:unit",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "npm run lint:js",
    "lint:js": "eslint src --fix",
    "prettier": "prettier --config .prettierrc \"./**/*.+(js|json|jsx)\" --write",
    "clean:example": "rnb --c"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "./**/*.+(js|json|jsx)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@typefaces-pack/typeface-inter": "^1.0.3",
    "axios": "^0.21.0",
    "clsx": "^1.1.1",
    "express": "^4.17.1",
    "hoist-non-react-statics": "3.3.0",
    "i18next": "^19.4.5",
    "immer": "^6.0.9",
    "invariant": "2.2.4",
    "lodash": "^4.17.19",
    "next": "^9.5.4",
    "next-i18next": "^4.4.2",
    "next-seo": "^4.14.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-accessible-accordion": "^3.3.3",
    "react-dom": "^16.13.1",
    "react-ga": "^3.2.0",
    "react-image-lightbox": "^5.1.1",
    "react-owl-carousel3": "^2.2.5",
    "react-redux": "7.0.2",
    "react-toastify": "^6.0.9",
    "react-visibility-sensor": "^5.1.1",
    "redux": "4.0.1",
    "redux-saga": "1.0.2",
    "redux-saga-routines": "^3.1.3",
    "reselect": "4.0.0",
    "signale": "^1.4.0",
    "slick-carousel": "^1.8.1",
    "typeface-metropolis": "^0.0.74"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.2",
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@r-next-b/cli": "^0.1.1",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.2.1",
    "@types/react": "^16.9.55",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-plugin-emotion": "^10.0.21",
    "coveralls": "^3.0.9",
    "cross-env": "^7.0.0",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-plugin-redux-saga": "^1.0.0",
    "husky": "^2.4.1",
    "jest-cli": "^24.9.0",
    "lint-staged": "^10.0.3",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.12.0",
    "typescript": "^4.0.5",
